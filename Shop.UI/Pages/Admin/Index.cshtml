@page
@model Shop.UI.Pages.Admin.IndexModel
@{
}

<div id="app" class="container">
    <div class="columns">
        <div class="column is-3">
            <div class="menu">
                <p class="menu-label">Admin Menu</p>
                <ul class="menu-list">
                    <li><a>Product</a></li>
                    <li><a>Products</a></li>
                    <li><a>Orders</a></li>
                    <li><a>Stock</a></li>
                </ul>
            </div>
        </div>
        <div class="column is-9">
            <div>
                <table class="table">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Value</th>
                        <th></th>
                        <th></th>
                    </tr>
                    <tr v-for="(product,index) in products">
                        <td>{{product.id}}</td>
                        <td>{{product.name}}</td>
                        <td>{{product.descrtion}}</td>
                        <td>{{product.value}}</td>
                        <td><a href="#" @@click="editProduct(product.id,index)">Edit</a></td>
                        <td><a href="#" @@click="deleteProduct(product.id,index)">Delete</a></td>
                    </tr>
                </table>
            </div>


            <div class="field">
                <div class="control">
                    <input class="input" v-model="productModel.name" />
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <input class="input" v-model="productModel.description" />
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <input class="input" v-model="productModel.value" />
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <input class="input" v-model="productModel.name" />
                </div>
            </div>
            <button @@click="addProduct" v-if="!productModel.id">Add product</button>
            <button @@click="updateProduct" v-else>Update product</button>
            <button @@click="updateProduct" v-else>Update product</button>


        </div>
    </div>

</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.12/dist/vue.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="~/js/Admin/main.js"></script>
}
