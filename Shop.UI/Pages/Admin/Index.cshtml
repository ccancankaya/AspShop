@page
@model Shop.UI.Pages.Admin.IndexModel
@{
}

<div id="app">
    <div>
        <p v-for="(product,index) in products">
            {{product.id}} - {{product.name}} - {{product.value}}
            <a href="#" @@click="editProduct(product.id,index)">Edit</a>
            <a href="#" @@click="deleteProduct(product.id,index)">Delete</a>

        </p>
    </div>

    <div>
        <input v-model="productModel.name" />
        <input v-model="productModel.description" />
        <input v-model.number="productModel.value" />
        <button @@click="addProduct" v-if="!productModel.id">Add product</button>
        <button @@click="updateProduct" v-else>Update product</button>


    </div>
</div>

@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.12/dist/vue.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="~/js/Admin/main.js"></script>
}
